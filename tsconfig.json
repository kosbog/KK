{
  "compilerOptions": {
    "outDir": "build/dist",
    "target": "esnext",
    "lib": [
      "es2017",
      "es6",
      "es2016.array.include",
      "dom"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./src/utils/@types"
    ],
    "module": "esnext",
    "sourceMap": true,
    "allowJs": false,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": false,
    "suppressImplicitAnyIndexErrors": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "jsx": "react-native",
    "skipLibCheck": true,
    "noEmit": true,
    "strict": true,
    "baseUrl": ".",
    "isolatedModules": true
  },
  "exclude": [
    "node_modules",
    "build",
    "__tests__/**/*-test.ts"
  ],
  "include": [
    "src"
  ]
}
